<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@android:color/white">

        //3张预览图时的页面
        <LinearLayout
            android:id="@+id/ll_3_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_news_title_3_pics"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="This is Title"
                    android:textSize="@dimen/sp18"
                    android:padding="@dimen/dp5"/>
                <TextView
                    android:id="@+id/tv_news_date_3_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is date"
                    android:textSize="@dimen/sp12"
                    android:padding="@dimen/dp5"
                    android:layout_gravity="bottom|end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/iv_news_thumbnail_1"
                    android:layout_height="@dimen/dp100"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/dp2"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/iv_news_thumbnail_2"
                    android:layout_height="@dimen/dp100"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/dp2"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/iv_news_thumbnail_3"
                    android:layout_height="@dimen/dp100"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/dp2"/>
            </LinearLayout>
        </LinearLayout>

        //2张预览图时的页面
        <LinearLayout
            android:id="@+id/ll_2_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_news_title_2_pics"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="This is Title"
                    android:textSize="@dimen/sp18"
                    android:padding="@dimen/dp5"/>
                <TextView
                    android:id="@+id/tv_news_date_2_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is date"
                    android:textSize="@dimen/sp12"
                    android:padding="@dimen/dp5"
                    android:layout_gravity="bottom|end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/iv_news_thumbnail_4"
                    android:layout_height="@dimen/dp100"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/dp2"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/iv_news_thumbnail_5"
                    android:layout_height="@dimen/dp100"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/dp2"/>
            </LinearLayout>
        </LinearLayout>

        //一张预览图是的页面
        <LinearLayout
            android:id="@+id/ll_1_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_news_title_1_pics"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="This is Title"
                    android:textSize="@dimen/sp18"
                    android:padding="@dimen/dp5"/>
                <TextView
                    android:id="@+id/tv_news_date_1_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is date"
                    android:textSize="@dimen/sp12"
                    android:padding="@dimen/dp5"
                    android:layout_gravity="bottom|end"/>
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/iv_news_thumbnail_6"
                android:layout_height="@dimen/dp100"
                android:scaleType="centerCrop"
                android:padding="@dimen/dp2"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>