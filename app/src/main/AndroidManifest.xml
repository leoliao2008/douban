<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.skycaster.douban">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.skycaster.douban.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/favicon_48x48"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/favicon_48x48"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.skycaster.douban.activity.SplashActivity"
            android:theme="@style/SplashPageTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.skycaster.douban.activity.MainActivity">
        </activity>
        <activity android:name="com.skycaster.douban.activity.WebViewActivity">
        </activity>
    </application>

</manifest>